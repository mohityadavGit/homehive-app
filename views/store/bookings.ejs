<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50 text-gray-800">
    <%- include('../partials/nav') %>

      <main class="container mx-auto px-4 py-10 max-w-7xl">
        <div class="text-center mb-10">
          <h1 class="text-4xl font-bold text-red-500 mb-3">Your Bookings</h1>
          <p class="text-lg text-gray-600">
            ‚ÄúTravel is the only thing you buy that makes you richer.‚Äù üåç
          </p>
          <p class="mt-2 text-md text-gray-500">Explore the homes you've booked and get ready for your stay!</p>
        </div>

        <% if (bookedHomes && bookedHomes.length> 0) { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% bookedHomes.forEach(home=> { %>
              <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300 overflow-hidden">
                <img src="<%= home.photo || 'https://images.pexels.com/photos/1396122/pexels-photo-1396122.jpeg' %>"
                  alt="<%= home.houseName %>" class="w-full h-48 object-cover">
                <div class="p-4">
                  <h2 class="text-xl font-semibold text-gray-900 mb-1">
                    <%= home.houseName %>
                  </h2>
                  <p class="text-sm text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-1"></i>
                    <%= home.location %>
                  </p>

                  <div class="flex justify-between items-center mb-2">
                    <span class="text-red-500 font-bold text-lg">Rs <%= home.price %> / night</span>
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-yellow-400 mr-1" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                        viewBox="0 0 24 24">
                        <path fill-rule="evenodd"
                          d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                          clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700">
                        <%= home.rating %>
                      </span>
                    </div>
                  </div>

                  <form action="/bookings/remove/<%= home._id %>" method="POST" class="mt-4">
                    <button type="submit"
                      class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg shadow-md transition duration-300">
                      Cancel Booking
                    </button>
                  </form>
                </div>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <div class="text-center text-gray-600 mt-20">
              <h2 class="text-2xl font-semibold mb-4">You haven‚Äôt booked any home yet.</h2>
              <p class="text-md">Explore our listings and start your journey today!</p>
              <a href="/homes"
                class="inline-block mt-6 px-6 py-2 text-white bg-red-500 hover:bg-red-600 rounded-full shadow-md transition duration-300">
                Browse Homes
              </a>
            </div>
            <% } %>
      </main>


  </body>

  </html>