<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">
          <%= editing ? "Edit" : "Register " %> Your Home on AirBnB
        </h1>
        <form action="/host/<%= (editing ? " edit-home" : "add-home" ).trim() %>" method="POST"
          enctype="multipart/form-data" class="max-w-md
          mx-auto">
          <input type="text" name="houseName" placeholder="Enter your House Name"
            value="<%= editing ? home.houseName : "" %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />

          <input type="text" name="price" placeholder="Price Per Night" value="<%= editing ? home.price : "" %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />

          <input type="text" name="location" placeholder="Location" value="<%= editing ? home.location : "" %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />

          <input type="text" name="rating" placeholder="Rating" value="<%= editing ? home.rating : "" %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />

          <!-- <input type="text" name="photo" placeholder="Enter Photo URL" value="<%= editing ? home.photo : "" %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" /> -->

          <input type="file" name="photo" placeholder="Enter Photo URL" accept="image/jpg , image/jpeg, image/png"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
          <input type="submit" value="<%= editing ? 'Update' : 'Submit' %>"
            class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />

          <!-- Hidden input to pass the house ID for editing -->
          <input type="hidden" name="_id" value="<%= editing ? home._id : "" %>" />
        </form>
      </main>
  </body>

  </html>