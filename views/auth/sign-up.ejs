<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gradient-to-br from-indigo-100 via-purple-50 to-teal-50 font-sans min-h-screen">
  <%- include('../partials/nav') %>

    <main class="container mx-auto py-4 px-4 flex justify-center items-center min-h-[calc(100vh-4rem)]">
      <div
        class="bg-white/95 backdrop-blur-sm p-6 rounded-xl shadow-xl w-full max-w-md animate__animated animate__fadeIn">
        <h1
          class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-6 text-center">
          Create an Account
        </h1>
        <% if (errors.length> 0) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error(s):</strong>
            <ul class="list-disc pl-5 mt-2">
              <% errors.forEach(error=> { %>
                <li class="text-sm">
                  <%= error %>
                </li>
                <% }) %>
            </ul>
          </div>
          <% } %>

            <form action="/signup" method="POST" class="space-y-4">
              <!-- Name Section -->
              <div class="grid grid-cols-2 gap-3">
                <!-- show error field -->


                <!-- First Name -->
                <div class="group">
                  <label for="firstName" class="block text-gray-700 text-sm font-medium mb-1">First Name</label>
                  <div class="relative">
                    <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="text" name="firstName" id="firstName"
                      value="<%= oldInput.firstName ? oldInput.firstName : '' %>" placeholder="First Name"
                      class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                      required />
                  </div>
                </div>

                <!-- Last Name -->
                <div class="group">
                  <label for="lastName" class="block text-gray-700 text-sm font-medium mb-1">Last Name</label>
                  <input type="text" name="lastName" id="lastName"
                    value="<%= oldInput.lastName ? oldInput.lastName : '' %>" placeholder="Last Name"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                    required />
                </div>
              </div>

              <!-- Email -->
              <div class="group">
                <label for="email" class="block text-gray-700 text-sm font-medium mb-1">Email</label>
                <div class="relative">
                  <i class="fas fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                  <input type="email" name="email" id="email" value="<%= oldInput.email ? oldInput.email : '' %>"
                    placeholder="your@email.com"
                    class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                    required />
                </div>
              </div>

              <!-- Password Section -->
              <div class="grid grid-cols-2 gap-3">
                <!-- Password -->
                <div class="group">
                  <label for="password" class="block text-gray-700 text-sm font-medium mb-1">Password</label>
                  <div class="relative">
                    <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="password" name="password" id="password"
                      value="<%= oldInput.password ? oldInput.password : '' %>" placeholder="Password"
                      class="w-full pl-10 pr-10 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                      required />
                    <button type="button" onclick="togglePassword('password')"
                      class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </button>
                  </div>
                </div>

                <!-- Confirm Password -->
                <div class="group">
                  <label for="confirmPassword" class="block text-gray-700 text-sm font-medium mb-1">Confirm</label>
                  <div class="relative">
                    <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="password" name="confirmPassword" id="confirmPassword"
                      value="<%= oldInput.confirmPassword ? oldInput.confirmPassword : '' %>" placeholder="Confirm"
                      class="w-full pl-10 pr-10 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                      required />
                    <button type="button" onclick="togglePassword('confirmPassword')"
                      class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>

              <!-- User Type -->
              <div class="group">
                <label for="userType" class="block text-gray-700 text-sm font-medium mb-1">User Type</label>
                <div class="relative">
                  <i class="fas fa-users absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                  <select name="userType" id="userType"
                    class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200"
                    required>
                    <option value="" disabled <%=!oldInput.userType ? 'selected' : '' %>>Select your user type</option>
                    <option value="guest" <%=oldInput.userType==='guest' ? 'selected' : '' %>>Guest</option>
                    <option value="host" <%=oldInput.userType==='host' ? 'selected' : '' %>>Host</option>
                  </select>
                </div>
              </div>

              <!-- Submit Button -->
              <button type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-2 rounded-lg hover:from-blue-700 hover:to-purple-700 transform hover:scale-[1.02] transition-all duration-200 font-medium">
                Create Account
              </button>

              <p class="text-sm text-center text-gray-600">
                Already have an account?
                <a href="/login"
                  class="text-purple-600 hover:text-purple-700 font-medium transition-colors duration-200">Login</a>
              </p>
            </form>
      </div>
    </main>

    <script>

      function togglePassword(fieldId) {
        const passwordField = document.getElementById(fieldId);
        const fieldType = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordField.setAttribute('type', fieldType);

        // Update the button's icon based on password visibility
        const button = passwordField.nextElementSibling;
        const svg = button.querySelector('svg');
        if (fieldType === 'text') {
          svg.style.opacity = '0.7';
        } else {
          svg.style.opacity = '1';
        }
      }

    </script>
</body>

</html>